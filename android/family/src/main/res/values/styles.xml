<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tv14spRightSubTitleStyle">
        <item name="android:layout_marginTop">@dimen/dpp_30</item>
        <item name="android:layout_below">@+id/tvName</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/summaryColor</item>
        <item name="android:textSize">@dimen/spp_28</item>
    </style>

    <style name="tv14SpSubTitleLeftStyle">
        <item name="android:textColor">@color/summaryColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginRight">@dimen/dpp_180</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tv14SpEditStyle">
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/titleColor</item>
        <item name="android:textColorHint">@color/summaryColor</item>
        <item name="android:layout_below">@+id/tvTitle</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>