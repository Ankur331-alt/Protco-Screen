<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_secondary_container_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal"
            tools:ignore="UselessParent">
            <ImageView
                android:id="@+id/iv_device_icon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:contentDescription="@null" />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/iv_device_fav_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/ic_liked"
                android:contentDescription="@null"/>
            <ImageView
                android:id="@+id/iv_device_switch_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:padding="5dp"
                android:visibility="visible"
                android:src="@drawable/ic_device_switch_status_off"
                android:contentDescription="@null"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/tv_device_name"
                    android:layout_width="205dp"
                    android:layout_height="wrap_content"
                    android:text="@string/rino_com_default_device_name"
                    android:textSize="22sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tv_device_config"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rino_com_default_device_config_unpaired"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:visibility="gone"
                    android:ellipsize="end"
                    android:textColor="@color/cen_device_config_paired_color" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_device_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rino_com_default_device_status"
                android:textColor="@color/cen_connect_not_connect_color"
                android:textSize="14sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:id="@+id/ll_sick_bars"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:visibility="gone">
                <View
                    android:id="@+id/v_vertical_spreader"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <SeekBar
                    android:id="@+id/sb_brightness"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:splitTrack="false"
                    android:duplicateParentState="true"
                    android:min="1"
                    android:max="100"
                    android:paddingHorizontal="20dp"
                    android:thumb="@drawable/shape_seekbar_pill_thumb"
                    android:progressDrawable="@drawable/shape_brightness_seekbar_bg" />
                <SeekBar
                    android:id="@+id/sb_color_temperature"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:splitTrack="false"
                    android:duplicateParentState="true"
                    android:min="1"
                    android:max="100"
                    android:paddingHorizontal="20dp"
                    android:layout_marginTop="8dp"
                    android:thumbOffset="2dp"
                    android:thumb="@drawable/shape_color_temp_seekbar_circular_thumb"
                    android:progressDrawable="@drawable/shape_color_temperature_seekbar_bg" />

                <SeekBar
                    android:id="@+id/sb_color"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:splitTrack="false"
                    android:visibility="visible"
                    android:duplicateParentState="true"
                    android:max="360"
                    android:min="0"
                    android:paddingHorizontal="20dp"
                    android:layout_marginTop="8dp"
                    android:thumbOffset="2dp"
                    android:thumb="@drawable/shape_color_seekbar_circular_thumb"
                    android:progressDrawable="@drawable/shape_household_color_seekbar_bg" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_switches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:visibility="gone">
                <View
                    android:id="@+id/v_start_switch_one"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:id="@+id/ll_toggle_switch_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:id="@+id/iv_toggle_switch_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_toggle_switch_off"
                        android:contentDescription="@null"
                        />
                    <TextView
                        android:id="@+id/tv_toggle_switch_one_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rino_com_default_toggle_switch_label_one"
                        android:textSize="10sp"
                        tools:ignore="SmallSp"
                        android:textColor="@color/cen_connect_not_connect_color"/>
                </LinearLayout>
                <View
                    android:id="@+id/v_start_switch_two"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:id="@+id/ll_toggle_switch_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="20dp"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:id="@+id/iv_toggle_switch_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_toggle_switch_off"
                        android:contentDescription="@null"
                        />
                    <TextView
                        android:id="@+id/tv_toggle_switch_two_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rino_com_default_toggle_switch_label_two"
                        android:textSize="10sp"
                        tools:ignore="SmallSp"
                        android:textColor="@color/cen_connect_not_connect_color"/>
                </LinearLayout>
                <View
                    android:id="@+id/v_start_switch_three"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:id="@+id/ll_toggle_switch_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="visible"
                    android:layout_marginStart="20dp"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:id="@+id/iv_toggle_switch_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_toggle_switch_on"
                        android:contentDescription="@null"
                        />
                    <TextView
                        android:id="@+id/tv_toggle_switch_three_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rino_com_default_toggle_switch_label_three"
                        android:textSize="10sp"
                        tools:ignore="SmallSp"
                        android:textColor="@color/cen_connect_not_connect_color"/>
                </LinearLayout>
                <View
                    android:id="@+id/v_start_switch_four"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:id="@+id/ll_toggle_switch_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="20dp"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:id="@+id/iv_toggle_switch_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_toggle_switch_on"
                        android:contentDescription="@null"
                        />
                    <TextView
                        android:id="@+id/tv_toggle_switch_four_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rino_com_default_toggle_switch_label_four"
                        android:textSize="10sp"
                        tools:ignore="SmallSp"
                        android:textColor="@color/cen_connect_not_connect_color"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_single_brightness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_alignParentBottom="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="14dp"
                        android:textColor="@color/cen_connect_not_connect_color"
                        android:textSize="16sp"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/cen_connect_not_connect_color"
                        android:textSize="16sp"
                        />
                </LinearLayout>
                <SeekBar
                    android:id="@+id/sb_single_brightness"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:splitTrack="false"
                    android:duplicateParentState="true"
                    android:progress="100"
                    android:min="1"
                    android:max="100"
                    android:paddingHorizontal="20dp"
                    android:thumb="@drawable/shape_seekbar_pill_thumb"
                    android:progressDrawable="@drawable/shape_brightness_seekbar_bg_52dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_environment_sensor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rino_scene_weather_change_temperature"
                        android:textColor="@color/cen_connect_not_connect_color"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rino_com_default_temperature_value"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rino_scene_weather_change_humidity"
                        android:textColor="@color/cen_connect_not_connect_color"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rino_com_default_humidity_value"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_air_conditioner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:id="@+id/iv_decrease_ac_temperature"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_plus_solid"
                    android:layout_marginStart="20dp"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rino_com_default_temperature_value"
                    android:textColor="@color/white"
                    android:textSize="29sp"
                    android:layout_marginStart="8dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:id="@+id/iv_increase_ac_temperature"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="@null"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_minus_solid"
                    />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>