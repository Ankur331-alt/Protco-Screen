<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_type"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:paddingStart="@dimen/dpp_80"
        android:paddingEnd="@dimen/dpp_80" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dpp_220"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/dpp_40">

        <ImageView
            android:id="@+id/iv_device_icon"
            android:layout_width="@dimen/dpp_160"
            android:layout_height="@dimen/dpp_160"
            android:layout_marginRight="@dimen/dpp_20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDeviceName"
                style="@style/tv14SpTitleTopStyleRl" />

            <TextView
                android:id="@+id/tvDeviceRoom"
                style="@style/tv11SpSubTitleRightStyle"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>