<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cen_main_theme_bg"
    android:orientation="vertical">

    <include layout="@layout/tool_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dpp_80"
        android:layout_marginTop="@dimen/dpp_31"
        android:layout_marginEnd="@dimen/dpp_80"
        android:layout_marginBottom="@dimen/dpp_40"
        android:layout_weight="1"
        android:orientation="vertical">


        <include
            android:id="@+id/inputRoomNameView"
            layout="@layout/item_family_input_info" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dpp_40"
            android:background="@drawable/shape_bg_item_10"
            android:orientation="vertical"
            android:paddingStart="@dimen/dpp_80"
            android:paddingTop="@dimen/dpp_40"
            android:paddingEnd="@dimen/dpp_80"
            android:paddingBottom="@dimen/dpp_40">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/rino_family_recommend"
                android:textColor="@color/cen_connect_step_selected_color"
                android:textSize="@dimen/spp_28" />

            <com.smart.rinoiot.common.tag.FlowTagLayout
                android:id="@+id/tagLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dpp_48" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dpp_40"
        android:paddingTop="@dimen/dpp_24"
        android:paddingBottom="@dimen/dpp_24"
        android:layout_marginStart="@dimen/dpp_40"
        android:background="@drawable/shape_join_family_confirm_bg"
        android:gravity="center"
        android:paddingStart="@dimen/dpp_200"
        android:paddingEnd="@dimen/dpp_200"
        android:text="@string/xpopup_save"
        android:textColor="@color/_xpopup_content_color"
        android:textSize="@dimen/spp_24"
        android:textStyle="bold" />

</LinearLayout>