<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dpp_80"
        android:gravity="center_vertical" >
        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="@dimen/dpp_200"
            android:layout_height="@dimen/dpp_200" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dpp_40" >
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textSize="@dimen/spp_28"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tvSubName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textSize="@dimen/spp_22"
                android:textColor="@color/white_60" />
        </LinearLayout>
        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="@dimen/dpp_88"
            android:layout_height="@dimen/dpp_88"
            android:src="@drawable/ic_arrow_right" />
    </LinearLayout>
</LinearLayout>