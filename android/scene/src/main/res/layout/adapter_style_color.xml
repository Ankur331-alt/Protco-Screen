<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dpp_40"
    android:layout_marginBottom="@dimen/dpp_40" >
    <ImageView
        android:id="@+id/iv_stroke"
        android:layout_width="@dimen/dpp_100"
        android:layout_height="@dimen/dpp_100"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"/>
    <ImageView
        android:id="@+id/iv_fill"
        android:layout_width="@dimen/dpp_80"
        android:layout_height="@dimen/dpp_80"
        android:src="@drawable/shape_circle_fill"
        android:layout_centerInParent="true" />
</RelativeLayout>