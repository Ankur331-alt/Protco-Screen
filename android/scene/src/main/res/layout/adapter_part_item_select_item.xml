<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dpp_80"
        android:gravity="center_vertical"
        android:background="@drawable/shape_bg_item_10" >
        <ImageView android:id="@+id/ivIcon"
            android:layout_width="@dimen/dpp_200"
            android:layout_height="@dimen/dpp_200"
            android:layout_marginEnd="@dimen/dpp_40" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="@dimen/spp_28"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tvValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dpp_10"
                android:textSize="@dimen/spp_22"
                android:textColor="@color/white_60" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/spp_28"
            android:textColor="@color/white_60" />
        <ImageView android:id="@+id/ivCheck"
            android:layout_width="@dimen/dpp_88"
            android:layout_height="@dimen/dpp_88"
            android:src="@drawable/ic_check_selector" />
    </LinearLayout>
    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dpp_80" />
</LinearLayout>