<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/cen_main_theme_bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dpp_80"
        android:layout_marginStart="@dimen/dpp_80"
        android:layout_marginEnd="@dimen/dpp_80"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="@string/rino_scene_effective_period_custom"
        android:textSize="@dimen/spp_32"
        android:textColor="@color/white" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dpp_80"
        android:layout_marginStart="@dimen/dpp_80"
        android:layout_marginEnd="@dimen/dpp_80"
        android:gravity="center" >
        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/spp_40"
            android:textColor="@color/white" />
        <View
            android:layout_width="@dimen/dpp_80"
            android:layout_height="@dimen/dpp_2"
            android:background="@color/white_60"/>
        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/spp_40"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dpp_80"
        android:layout_marginEnd="@dimen/dpp_80"
        android:gravity="center" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/rino_scene_effective_start_time"
            android:textSize="@dimen/spp_28"
            android:textColor="@color/white_60" />
        <View
            android:layout_width="@dimen/dpp_80"
            android:layout_height="@dimen/dpp_2" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/rino_scene_effective_end_time"
            android:textSize="@dimen/spp_28"
            android:textColor="@color/white_60" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="@dimen/dpp_686"
        android:layout_height="@dimen/dpp_300"
        android:layout_marginTop="@dimen/dpp_80"
        android:layout_marginStart="@dimen/dpp_80"
        android:layout_marginEnd="@dimen/dpp_80"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_bg_white_10">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >
            <com.contrarywind.view.WheelView
                android:id="@+id/hour1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:wheelview_gravity="right"
                app:wheelview_textSize="@dimen/spp_19"
                app:wheelview_textColorCenter="@color/f_454545"
                app:wheelview_dividerColor="@color/f_f0f0f0"
                app:wheelview_dividerWidth="@dimen/dpp_2"
                app:wheelview_lineSpacingMultiplier="3" />
            <com.contrarywind.view.WheelView
                android:id="@+id/wvBlank1"
                android:layout_width="@dimen/dpp_40"
                android:layout_height="match_parent"
                app:wheelview_textSize="@dimen/spp_19"
                app:wheelview_textColorCenter="@color/white"
                app:wheelview_textColorOut="@color/white"
                app:wheelview_dividerColor="@color/f_f0f0f0"
                app:wheelview_dividerWidth="@dimen/dpp_2"
                app:wheelview_lineSpacingMultiplier="3" />
            <com.contrarywind.view.WheelView
                android:id="@+id/min1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:wheelview_gravity="left"
                app:wheelview_textSize="@dimen/spp_19"
                app:wheelview_textColorCenter="@color/f_454545"
                app:wheelview_dividerColor="@color/f_f0f0f0"
                app:wheelview_dividerWidth="@dimen/dpp_2"
                app:wheelview_lineSpacingMultiplier="3" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >
            <com.contrarywind.view.WheelView
                android:id="@+id/hour2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:wheelview_gravity="right"
                app:wheelview_textSize="@dimen/spp_19"
                app:wheelview_textColorCenter="@color/f_454545"
                app:wheelview_dividerColor="@color/f_f0f0f0"
                app:wheelview_dividerWidth="@dimen/dpp_2"
                app:wheelview_lineSpacingMultiplier="3" />
            <com.contrarywind.view.WheelView
                android:id="@+id/wvBlank2"
                android:layout_width="@dimen/dpp_40"
                android:layout_height="match_parent"
                app:wheelview_textSize="@dimen/spp_19"
                app:wheelview_textColorCenter="@color/white"
                app:wheelview_textColorOut="@color/white"
                app:wheelview_dividerColor="@color/f_f0f0f0"
                app:wheelview_dividerWidth="@dimen/dpp_2"
                app:wheelview_lineSpacingMultiplier="3" />
            <com.contrarywind.view.WheelView
                android:id="@+id/min2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:wheelview_gravity="left"
                app:wheelview_textSize="@dimen/spp_19"
                app:wheelview_textColorCenter="@color/f_454545"
                app:wheelview_dividerColor="@color/f_f0f0f0"
                app:wheelview_dividerWidth="@dimen/dpp_2"
                app:wheelview_lineSpacingMultiplier="3" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="@dimen/dpp_960"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dpp_80"
        android:layout_marginBottom="@dimen/dpp_80"
        android:layout_marginStart="@dimen/dpp_200"
        android:layout_marginEnd="@dimen/dpp_200" >
        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/dpp_128"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/rino_common_cancel"
            android:textSize="@dimen/spp_24"
            android:textColor="@color/white"
            android:background="@drawable/shape_bg_stroke_2ce69b_5" />
        <View
            android:layout_width="@dimen/dpp_80"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/dpp_128"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/rino_common_confirm"
            android:textSize="@dimen/spp_24"
            android:textColor="@color/white"
            android:background="@drawable/shape_bg_gradient_y_to_b_5" />
    </LinearLayout>
</LinearLayout>