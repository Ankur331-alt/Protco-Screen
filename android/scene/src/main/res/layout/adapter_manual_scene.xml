<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="284dp"
    android:layout_height="70dp"
    android:layout_marginEnd="@dimen/dpp_80"
    android:gravity="center"
    android:background="@drawable/shape_manual_scene_bg">

    <LinearLayout
        android:id="@+id/ll_manual_scene"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/iv_scene_icon"
            android:layout_width="@dimen/dpp_88"
            android:layout_height="@dimen/dpp_88"
            android:padding="@dimen/dpp_10"
            android:src="@drawable/ic_scene_home_mode" />

        <TextView
            android:id="@+id/tv_scene_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/rino_com_default_scene_name"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>
</LinearLayout>