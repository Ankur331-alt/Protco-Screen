<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_f2f2f2_80_14"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textSize="@dimen/spp_17"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dpp_40"
        android:layout_marginRight="@dimen/dpp_40"
        android:layout_marginBottom="@dimen/dpp_10"
        android:background="@drawable/shape_btn_bg_white_8"
        android:paddingStart="@dimen/dpp_30"
        android:paddingTop="@dimen/dpp_20"
        android:paddingEnd="@dimen/dpp_30"
        android:singleLine="true"
        android:ellipsize="end"
        android:paddingBottom="@dimen/dpp_20"
        android:textColor="@color/c_333333"
        android:textColorHint="@color/summaryColor"
        android:textSize="@dimen/spp_15" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dpp_40"
        android:layout_marginRight="@dimen/dpp_40"
        android:layout_marginBottom="@dimen/dpp_40"
        android:textColor="@color/titleColor"
        android:textSize="@dimen/spp_16"
        android:visibility="invisible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dpp_1"
        android:alpha="0.36"
        android:background="@color/c_3C3C43" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:text="@string/rino_common_cancel"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/spp_16" />

        <View
            android:layout_width="1px"
            android:alpha="0.36"
            android:layout_height="match_parent"
            android:background="@color/c_3C3C43" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:text="@string/rino_common_save"
            android:textColor="@color/main_theme_color"
            android:textSize="@dimen/spp_16" />

    </LinearLayout>

</LinearLayout>