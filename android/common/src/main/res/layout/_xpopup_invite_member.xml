<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_bg_item_10"
    android:orientation="vertical"
    android:paddingStart="@dimen/dpp_100"
    android:paddingTop="@dimen/dpp_40"
    android:paddingEnd="@dimen/dpp_100"
    android:paddingBottom="@dimen/dpp_40">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/tv16SpCenterStyle"
        android:layout_gravity="center_horizontal"
        android:text="@string/rino_family_add_member_title"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dpp_60"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_dialog_input_room_name_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit"
            android:layout_width="0dp"
            android:layout_height="@dimen/dpp_140"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/rino_family_input_add_member_hint"
            android:imeOptions="actionDone"
            android:maxLength="30"
            android:paddingStart="@dimen/dpp_6"
            android:singleLine="true"
            android:textColor="@color/cen_connect_step_selected_color"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/spp_32" />

        <ImageView
            android:id="@+id/ivClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dpp_20"
            android:layout_marginEnd="@dimen/dp_10"
            android:src="@drawable/icon_member_name_clear" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dpp_80"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/shape_cen_dialog_cancel"
            android:gravity="center"
            android:paddingStart="@dimen/dpp_140"
            android:paddingEnd="@dimen/dpp_140"
            android:text="@string/xpopup_cancel"
            android:paddingTop="@dimen/dpp_32"
            android:paddingBottom="@dimen/dpp_32"
            android:textColor="@color/_xpopup_content_color"
            android:textSize="@dimen/spp_24"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dpp_40"
            android:background="@drawable/shape_cen_dialog_confirm"
            android:gravity="center"
            android:paddingTop="@dimen/dpp_32"
            android:paddingBottom="@dimen/dpp_32"
            android:paddingStart="@dimen/dpp_140"
            android:paddingEnd="@dimen/dpp_140"
            android:text="@string/xpopup_ok"
            android:textColor="@color/_xpopup_content_color"
            android:textSize="@dimen/spp_24"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>