<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/dpp_60"
    android:background="@drawable/shape_bg_item_10"
    android:fillViewport="true"
    android:padding="@dimen/dpp_44"
    android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivProfilePhoto"
            android:layout_width="@dimen/dpp_280"
            android:layout_height="@dimen/dpp_280"
            android:src="@drawable/icon_default_avatar" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dpp_24"
            android:layout_marginBottom="@dimen/dpp_50"
            android:text="Li home"
            android:textColor="@color/cen_connect_step_selected_color"
            android:textSize="@dimen/spp_28"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_logout_bg"
            android:paddingStart="@dimen/dpp_100"
            android:paddingTop="@dimen/dpp_24"
            android:paddingEnd="@dimen/dpp_100"
            android:paddingBottom="@dimen/dpp_24"
            android:text="@string/rino_user_exit_binding"
            android:textColor="@color/cen_connect_step_selected_color"
            android:textSize="@dimen/spp_24"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>