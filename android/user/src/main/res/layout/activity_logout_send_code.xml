<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_theme_bg"
    android:paddingStart="@dimen/dpp_40"
    android:paddingEnd="@dimen/dpp_40"
    android:orientation="vertical">

    <include layout="@layout/tool_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_weight="0.15"
        android:layout_height="0dp" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dpp_70"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/dpp_150"
                android:layout_height="@dimen/dpp_150"
                android:src="@drawable/icon_default_avatar"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rino_mine_logout"
                android:layout_marginTop="@dimen/dpp_48"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/spp_18" />
            <TextView
                android:id="@+id/tv_account_describe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dpp_28"
                android:textColor="@color/c_A5A5A5"
                android:textSize="@dimen/spp_16" />
            <TextView
                android:id="@+id/tvLogoutCode"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dpp_100"
                android:layout_marginTop="@dimen/dpp_64"
                android:paddingStart="@dimen/dpp_100"
                android:paddingEnd="@dimen/dpp_100"
                android:background="@drawable/shape_main_theme_bg_50"
                android:gravity="center"
                android:text="@string/rino_user_get_verify_code"
                android:textColor="@color/white"
                android:textSize="@dimen/spp_16"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>