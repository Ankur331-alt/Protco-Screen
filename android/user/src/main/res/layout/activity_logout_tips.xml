<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingStart="@dimen/dpp_40"
    android:paddingEnd="@dimen/dpp_40"
    android:orientation="vertical">

    <include layout="@layout/tool_bar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dpp_70"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rino_user_cancel_account_describe1"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/spp_16" />
            <TextView
                android:id="@+id/tv_account_describe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dpp_24"
                android:textColor="@color/c_666666"
                android:textSize="@dimen/spp_16" />
            <TextView
                android:id="@+id/tv_account_describe2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dpp_80"
                android:textColor="@color/c_666666"
                android:textSize="@dimen/spp_16" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dpp_80"
                android:textColor="@color/c_666666"
                android:text="@string/rino_user_cancel_account_describe4"
                android:textSize="@dimen/spp_16" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <TextView
        android:id="@+id/tvLogout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dpp_100"
        android:layout_marginTop="@dimen/dpp_60"
        android:layout_marginBottom="@dimen/dpp_140"
        android:background="@drawable/logout_selector"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/spp_16"/>
</LinearLayout>