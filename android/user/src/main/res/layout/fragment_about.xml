<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dpp_60"
    android:background="@drawable/shape_bg_item_10"
    android:fillViewport="true"
    android:padding="@dimen/dpp_44"
    android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dpp_160"
        android:layout_marginEnd="@dimen/dpp_160"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/protco_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dpp_24"
            android:text="@string/rino_app_name"
            android:textColor="@color/cen_connect_step_selected_color"
            android:textSize="@dimen/spp_32" />

        <include
            android:id="@+id/includeModel"
            layout="@layout/item_about_device" />

        <include
            android:id="@+id/includeHardwareVersion"
            layout="@layout/item_about_device" />

        <include
            android:id="@+id/includeSystemVersion"
            layout="@layout/item_about_device" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>