<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/view_step_before_line"
            android:layout_width="0dp"
            android:layout_height="@dimen/dpp_2"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/cen_connect_step_line" />

        <TextView
            android:id="@+id/tv_connect_step"
            android:layout_width="@dimen/dpp_80"
            android:layout_height="@dimen/dpp_80"
            android:layout_marginStart="@dimen/dpp_10"
            android:layout_marginEnd="@dimen/dpp_10"
            android:gravity="center"
            android:textColor="@color/cen_connect_step_selected_color"
            android:textSize="@dimen/spp_24" />

        <View
            android:id="@+id/view_step_after_line"
            android:layout_width="0dp"
            android:layout_height="@dimen/dpp_2"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/cen_connect_step_line" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_connect_network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dpp_20"
        android:gravity="center"
        android:textColor="@color/cen_connect_step_selected_color"
        android:textSize="@dimen/spp_20" />
</LinearLayout>