<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/dpp_100"
    android:layout_marginEnd="@dimen/dpp_100"
    android:background="@color/cen_main_theme_bg"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dpp_60"
        android:background="@drawable/shape_bg_item_10"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_current_network"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dpp_80">

                <RelativeLayout
                    android:layout_width="@dimen/dpp_330"
                    android:layout_height="@dimen/dpp_330"
                    android:background="@drawable/icon_scan_login_code_bg"
                    android:padding="@dimen/dpp_20">

                    <ImageView
                        android:id="@+id/iv_scan_login_code"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_scan_login_code" />

                </RelativeLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dpp_70"
                    android:layout_marginBottom="@dimen/dpp_12"
                    android:layout_weight="2"
                    android:background="@drawable/shape_scan_login_tips_bg"
                    android:paddingStart="@dimen/dpp_50"
                    android:paddingTop="@dimen/dpp_40"
                    android:paddingEnd="@dimen/dpp_50"
                    android:paddingBottom="@dimen/dpp_40"
                    android:text="@string/rino_user_scan_login_tips"
                    android:textColor="@color/cen_connect_step_selected_color"
                    android:textSize="@dimen/spp_20" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dpp_80"
                android:layout_marginEnd="@dimen/dpp_80"
                android:layout_marginBottom="@dimen/dpp_24"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivAgree"
                    android:layout_width="@dimen/dpp_140"
                    android:layout_height="@dimen/dpp_110"
                    android:paddingStart="@dimen/dpp_30"
                    android:paddingTop="@dimen/dpp_30"
                    android:paddingBottom="@dimen/dpp_30"
                    android:src="@drawable/check_box_selector" />

                <TextView
                    android:id="@+id/tvPrivacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dpp_7"
                    android:paddingTop="@dimen/dpp_30"
                    android:paddingBottom="@dimen/dpp_30"
                    android:text="@string/rino_user_agree_tip"
                    android:textColor="@color/cen_connect_step_normal_color"
                    android:textSize="@dimen/spp_16" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>