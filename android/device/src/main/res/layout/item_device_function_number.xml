<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <SeekBar
        android:id="@+id/progressBarNumber"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dpp_56"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:splitTrack="false"
        android:duplicateParentState="true"
        android:progress="40"
        android:thumb="@drawable/stock_seek_bar_thumb"
        android:progressDrawable="@drawable/shape_device_number_progress_bg"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dpp_8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvProgressName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="brightness"
            android:textColor="@color/_xpopup_cancel"
            android:textSize="@dimen/spp_10" />

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dpp_30"
            android:text="50%"
            android:textColor="@color/_xpopup_cancel"
            android:textSize="@dimen/spp_10"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>