<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingStart="@dimen/dpp_30"
    android:paddingEnd="@dimen/dpp_30"
    android:orientation="vertical">

    <include layout="@layout/tool_bar" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dpp_400">
        <ImageView
            android:id="@+id/iv_device_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dpp_30"
            android:paddingBottom="@dimen/dpp_30"
            android:text="@string/rino_device_panel_rename_title"
            android:textColor="@color/c_414141"
            android:textSize="@dimen/spp_13" />

        <TextView
            android:id="@+id/tvRename"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/icon_device_right_back"
            android:drawablePadding="@dimen/dpp_20"
            android:gravity="right"
            android:paddingTop="@dimen/dpp_30"
            android:paddingBottom="@dimen/dpp_30"
            android:layout_marginStart="@dimen/dpp_30"
            android:textColor="@color/c_414141"
            android:textSize="@dimen/spp_13" />

    </LinearLayout>
</LinearLayout>